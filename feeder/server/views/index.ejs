<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>User Profile by NSA</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
        .progress {
            width: 100%;
        }

        li {
            width: 33%;
            height: 100%;
            display: inline-block;
        }

        #background {
            background: url("http://16004-presscdn-0-50.pagely.netdna-cdn.com/wp-content/uploads/Nsa-eagle-white.jpg") no-repeat center;
            background-size: contain;
            position: absolute;
            opacity: 0.1;
            height: 100%;
            width: 100%;

        }
    </style>
</head>
<body>


<div id="background"></div>
<h1><%- data[0].arobase %></h1>

<ul>
    <li>
        <h3>Big 5 :</h3>

        <% data[0].behavior.big5.personality.forEach(function(item){ %>
        <div class="name"><%= item.name %></div>
        <div class="progress">
            <div class="skills progress-bar" role="progressbar" aria-valuenow="<%= Math.trunc(item.percentage*100) %>"
                 aria-valuemin="0" aria-valuemax="100"><%= Math.trunc(item.percentage*100) %>
            </div>
        </div>
        <% })%>
    </li>
    <li>
        <h3>Valeurs :</h3>

        <% data[0].behavior.values.forEach(function(item){ %>
        <%= item.name %>
        <div class="progress">
            <div class="skills progress-bar" role="progressbar" aria-valuenow="<%= Math.trunc(item.percentage*100) %>"
                 aria-valuemin="0" aria-valuemax="100"><%= Math.trunc(item.percentage*100) %>
            </div>
        </div>
        <% })%>
    </li>
    <li>
        <h3>Besoins :</h3>

        <% data[0].behavior.needs.forEach(function(item){ %>
        <%= item.name %>
        <div class="progress">
            <div class="skills progress-bar" role="progressbar" aria-valuenow="<%= Math.trunc(item.percentage*100) %>"
                 aria-valuemin="0" aria-valuemax="100"><%= Math.trunc(item.percentage*100) %>
            </div>

        </div>
        <% })%>
    </li>
</ul>

<script
        src="http://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>


<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>


<script>
    $('.skills').each(function () {
        let value = $(this).html();
        console.log(value + "%")
        $(this).width(value + "%");
    })
</script>

</body>
</html>